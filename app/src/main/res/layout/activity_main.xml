<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/settingsView">
    <TextView
            android:text="End Time:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            app:layout_constraintEnd_toStartOf="@+id/endTime" android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp" app:layout_constraintBottom_toBottomOf="@+id/endTime"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/setEnd" android:textStyle="normal"
            android:textSize="24sp" android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.498"
            tools:textColor="@android:color/holo_blue_dark" android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/settingsButton"
    />
    <SeekBar
            android:layout_width="253dp"
            android:layout_height="25dp"
            android:id="@+id/endTime" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.896"
            tools:layout_editor_absoluteY="351dp"/>
    <Button
            android:text="Save Settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/settingsButton" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.498"
            tools:layout_editor_absoluteY="402dp"/>
    <SeekBar
            android:layout_width="248dp"
            android:layout_height="18dp"
            android:id="@+id/startTime" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.864"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/pageTitle"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/setStart" android:textStyle="normal"
            android:textSize="24sp" android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.498"
            tools:textColor="@android:color/holo_blue_dark"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/settingsButton"/>
    <EditText
            android:layout_width="307dp"
            android:layout_height="76dp"
            android:inputType="textPersonName"
            android:text="dayMeter Settings"
            android:ems="10"
            android:id="@+id/pageTitle"
            android:textSize="36sp" android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.309"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/saved" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/setEnd"
            app:layout_constraintHorizontal_bias="0.498"
    />
    <TextView
            android:text="Start Time:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="301dp"
            android:id="@+id/textView3" app:layout_constraintEnd_toStartOf="@+id/startTime"
            android:layout_marginEnd="12dp" android:layout_marginRight="12dp"/>
</android.support.constraint.ConstraintLayout>